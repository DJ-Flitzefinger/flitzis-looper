{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "ruff": {
        "command": ["uv", "run", "ruff", "format", "$FILE"],
        "extensions": [".py", ".pyi"]
    },
    "cargo-fmt": {
        "command": ["cargo", "fmt", "--manifest-path", "rust/Cargo.toml", "--", "$FILE"],
        "extensions": [".rs"]
    }
  }
}
